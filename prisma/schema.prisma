datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model RewardEvent {
  id              Int      @id @default(autoincrement())
  externalId      String?  @unique
  userId          String
  stockSymbol     String
  quantity        Decimal
  rewardTimestamp DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  Ledger          Ledger[]
}

model Ledger {
  id           Int      @id @default(autoincrement())
  rewardId     Int
  stockSymbol  String
  quantity     Decimal
  inrOutflow   Decimal
  brokerageFee Decimal
  sttFee       Decimal
  gstFee       Decimal
  createdAt    DateTime @default(now())

  RewardEvent  RewardEvent @relation(fields: [rewardId], references: [id])
}
